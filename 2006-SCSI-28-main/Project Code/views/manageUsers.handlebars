<section class="py-4">
  <div class="container-fluid px-4">
    <div class="bg-success-subtle rounded-3 p-4 p-md-5 mb-4">
      
      <div class="text-center mb-4">
        <h1 class="display-6 mb-3 text-success">
          <i class="bi bi-people me-2"></i>Manage Users
        </h1>
        <p class="mb-0">View and manage platform users</p>
      </div>

      <div class="mb-4">
        <a href="/admin/dashboard" class="btn btn-outline-success">
          <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">
            <i class="bi bi-people me-2"></i>Users ({{users.length}})
          </h5>
        </div>
        <div class="table-responsive">
          <table class="table mb-0">
            <thead class="table-light">
              <tr>
                <th>Profile</th>
                <th>Email</th>
                <th>Date Joined</th>
                <th>Role</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#if users}}
                {{#each users}}
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      {{#if this.profilePicture}}
                        <img src="{{this.profilePicture}}" alt="Profile" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" onerror="this.src='/img/defaultUser.jpg'">
                      {{else}}
                        <img src="/img/defaultUser.jpg" alt="Profile" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                      {{/if}}
                      <div>
                        <div class="fw-semibold small">{{#if this.name}}{{this.name}}{{else}}No Name{{/if}}</div>
                        <small class="text-muted">@{{#if this.username}}{{this.username}}{{else}}nouser{{/if}}</small>
                      </div>
                    </div>
                  </td>
                  <td class="small">{{#if this.email}}{{this.email}}{{else}}<span class="text-muted">No email</span>{{/if}}</td>
                  <td class="small">
                    {{#if this.dateJoined}}
                      {{formatDate this.dateJoined}}
                    {{else}}
                      <span class="text-muted">Invalid Date</span>
                    {{/if}}
                  </td>
                  <td>
                    {{#if this.isAdmin}}
                      <span class="badge bg-primary">Admin</span>
                    {{else}}
                      <span class="badge bg-secondary">User</span>
                    {{/if}}
                  </td>
                  <td>
                    {{#if this.flagged}}
                      <span class="badge bg-danger">Flagged</span>
                    {{else}}
                      <span class="badge bg-success">Active</span>
                    {{/if}}
                  </td>
                  <td>
                    <a href="/admin/users/edit/{{this._id}}" class="btn btn-sm btn-warning rounded-circle" style="width: 32px; height: 32px;" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}
              {{else}}
                <tr>
                  <td colspan="6" class="text-center py-4 text-muted">
                    <i class="bi bi-people display-4 mb-3"></i>
                    <div>No users found</div>
                  </td>
                </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
      
    </div>
  </div>
</section>
