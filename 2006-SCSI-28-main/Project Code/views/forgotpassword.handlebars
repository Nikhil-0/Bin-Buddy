<section class="py-4">
  <div class="container-fluid px-4">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-7">
        <div class="bb-hero-card bg-success-subtle rounded-3 p-4 p-md-5">
          
          <header class="text-center mb-4">
            <div class="mb-3">
              <i class="bi bi-key text-success" style="font-size: 3rem;"></i>
            </div>
            <h1 class="display-6 mb-3 text-success">Reset Password</h1>
            <p class="lead text-muted mb-0">Enter your email address and we'll send you a recovery link</p>
          </header>

          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <form action="/forgotpassword" method="POST">
                <div class="mb-4">
                  <label for="email" class="form-label">
                    <i class="bi bi-envelope me-2 text-success"></i>Email Address
                  </label>
                  <input type="email" class="form-control form-control-lg" id="email" name="email" 
                         placeholder="Enter your registered email" required>
                  <div class="form-text">
                    <i class="bi bi-info-circle me-1"></i>We'll send password reset instructions to this email
                  </div>
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                  <i class="bi bi-envelope-paper me-2"></i>Send Recovery Email
                </button>
              </form>
              
              <div class="text-center">
                <hr class="my-3">
                <p class="text-muted mb-0">
                  Remember your password? 
                  <a href="/login" class="text-success text-decoration-none fw-bold">Sign in here</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>