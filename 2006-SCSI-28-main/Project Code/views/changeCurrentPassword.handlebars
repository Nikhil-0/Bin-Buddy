<section class="py-4">
  <div class="container-fluid px-4">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-7">
        <div class="bb-hero-card bg-success-subtle rounded-3 p-4 p-md-5">
          
          <header class="text-center mb-4">
            <div class="mb-3">
              <i class="bi bi-shield-lock text-success" style="font-size: 3rem;"></i>
            </div>
            <h1 class="display-6 mb-3 text-success">Change Password</h1>
            <p class="lead text-muted mb-0">Update your account password for better security</p>
          </header>

          {{#if errors}}
            <div class="alert alert-danger border-0 mb-4" role="alert">
              <h6 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Please fix the following errors:
              </h6>
              <ul class="mb-0">
                {{#each errors}}
                  <li>{{this.msg}}</li>
                {{/each}}
              </ul>
            </div>
          {{/if}}

          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <form action="/changeCurrentPassword" method="POST">
                <div class="mb-3">
                  <label for="currentPassword" class="form-label">
                    <i class="bi bi-lock me-2 text-success"></i>Current Password
                  </label>
                  <input type="password" class="form-control form-control-lg" id="currentPassword" 
                         name="currentPassword" placeholder="Enter your current password" required>
                </div>

                <div class="mb-3">
                  <label for="newPassword" class="form-label">
                    <i class="bi bi-key me-2 text-success"></i>New Password
                  </label>
                  <input type="password" class="form-control form-control-lg" id="newPassword" 
                         name="newPassword" placeholder="Enter your new password" required>
                </div>

                <div class="mb-4">
                  <label for="confirmNewPassword" class="form-label">
                    <i class="bi bi-key-fill me-2 text-success"></i>Confirm New Password
                  </label>
                  <input type="password" class="form-control form-control-lg" id="confirmNewPassword" 
                         name="confirmNewPassword" placeholder="Confirm your new password" required>
                </div>

                <div class="d-grid gap-2">
                  <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-shield-check me-2"></i>Update Password
                  </button>
                  <a href="/profile" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Profile
                  </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>