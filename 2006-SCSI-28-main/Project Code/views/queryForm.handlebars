<section class="py-4">
  <div class="container">
    <div class="bb-hero-card bg-success-subtle rounded-3 p-4 p-md-5">
      <div class="row align-items-center g-4 mb-4">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-6 mb-3">
            <i class="bi bi-question-circle me-2 text-success"></i>Ask a Question
          </h1>
          <p class="lead mb-0">Get expert guidance on e-waste recycling, disposal methods, and environmental practices</p>
        </div>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body p-5">
          <form action="/query/submit" method="POST">
                <div class="mb-4">
                  <label for="question" class="form-label fw-semibold">
                    <i class="bi bi-chat-text me-2 text-success"></i>Your Question
                  </label>
                  <textarea id="question" name="question" class="form-control form-control-lg" rows="4"
                           placeholder="Ask anything about e-waste recycling, disposal guidelines, bin locations, or environmental practices..." required></textarea>
                  <div class="form-text">Be as specific as possible to get the most helpful answer</div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                  <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="bi bi-send me-2"></i>Submit Question
                  </button>
                  <a href="/query/Dashboard" class="btn btn-outline-danger btn-lg px-4">
                    <i class="bi bi-arrow-left me-2"></i>Cancel
                  </a>
                </div>
              </form>
            </div>
          </div>

      <div class="row mt-4">
        <div class="col-12 text-center">
          <a href="/articles" class="text-decoration-none">
            <p class="text-success mb-3 fw-medium" style="cursor: pointer; transition: all 0.2s ease;">
              <i class="bi bi-book me-2"></i>Browse our educational guides for quick answers
            </p>
          </a>
          <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="/query/myqueries" class="btn btn-outline-primary">
              <i class="bi bi-list-ul me-2"></i>My Questions
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

